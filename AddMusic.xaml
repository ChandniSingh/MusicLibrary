<Page
    x:Class="MusicApp.AddMusic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="150,150,0,0">
            <StackPanel Orientation="Horizontal">
            <TextBlock Text="Title" Width="60" Height="30"   Margin="0,0,10,0"/>

                <TextBox Name="titlename" Height="35" Width="100"/>
                <StackPanel Orientation="Vertical" Margin="150,150,0,0">
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                        <TextBlock Text="Genre" Width="60" Height="30"   Margin="0,0,10,0"/>

                <TextBox Name="genrename" Height="35" Width="100"/>
                    

            </StackPanel>
        </StackPanel>
        <Button Content="Save" Click ="Button_Click"  Margin="253,395,0,0" VerticalAlignment="Top"/>



    </Grid>
</Page>
