<Page
    x:Class="MusicApp.AddMusic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="150,150,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Title" Width="130" Height="30"   Margin="0,0,10,0"/>
                <TextBox Name="titlename" Height="35" Width="440"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Artist" Width="130" Height="30"   Margin="0,0,10,0"/>
                <TextBox Name="Artist" Height="35" Width="445"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Thumbnail" Width="130" Height="30"   Margin="0,0,10,0"/>
                <TextBox Name="Thumbnail" Height="35" Width="445"/>
                <Button Content="Choose" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
        <Button Content="Save" Click ="Button_Click"  Margin="685,320,0,0" VerticalAlignment="Top"/>
        <Button Content="Cancel" Click ="Cancel_Click"  Margin="765,320,0,0" VerticalAlignment="Top"/>
    </Grid>
    
</Page>
